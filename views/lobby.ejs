<!doctype html>
<html>
<h1> Welcome to the Lobby, <%=username%></h1>

<style>
    div.lobbyBox {display: block; width: 60%; border: 5px solid black; padding: 5%; margin: 25px;}
    * { margin: 0; padding: 0; box-sizing: border-box;}
    body { font: 13px Helvetica, Arial;}
    form { background: #000; padding: 3px; position:fixed; bottom: 0; width: 30%; float:right}
    form input { border: 0; padding: 10px; width: 90%;}
    form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
    #messages { list-style-type: none; margin: 0; padding: 0; width: 30%; padding-top:20%}
    #messages li { padding: 5px 10px;}
    #messages li:nth-child(odd) { background: #eee;}
</style>

<script src="/socket.io/socket.io.js"></script>
<script> var user = <%=username%> </script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script> 
$(function() {
    var socket = io();
    $('form').submit(function() { 
          socket.emit('chat message',{val: $('#m').val(), user: username});
          $('#m').val('');
          return false;
    });
    socket.on('chat message', function(msg) {
        $('#messages').append($('<li>').text(msg));
    });
});
</script>

<div class="lobbyBox">This is going to be the lobby box.</div>

<body>
    <ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
  </body>
</html>
